# Telegram
BOT_TOKEN=YOUR_TELEGRAM_BOT_TOKEN

# Postgres (used by app and Alembic)
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=masterbot
POSTGRES_USER=masterbot
POSTGRES_PASSWORD=masterbot
# Alternatively, you can use DSN instead of the 5 vars above:
# POSTGRES_DSN=postgresql+asyncpg://user:pass@host:5432/dbname

# Admin panel
ADMIN_PORT=8080

# JWT secret key for admin auth (must be the same across restarts)
SECRET_KEY=dev-secret-key-change-me

# Infra
DB_WAIT_TIMEOUT=60

# Logging
# DEBUG | INFO | WARNING | ERROR
LOG_LEVEL=INFO

# Default admin user (auto-created by scripts/ensure_superadmin.py at admin startup)
# Change in production.
ADMIN_DEFAULT_USERNAME=superadmin
ADMIN_DEFAULT_PASSWORD=admin123
ADMIN_DEFAULT_EMAIL=admin@example.com
ADMIN_DEFAULT_NAME=Super Admin
