# Admin authentication
ADMIN_DEFAULT_USERNAME=admin
ADMIN_DEFAULT_PASSWORD=admin123
ADMIN_DEFAULT_EMAIL=admin@example.com
ADMIN_DEFAULT_NAME=Admin

# Superadmin permissions
SUPERADMIN_USERNAMES=admin

# Partner settings
PARTNER_DEFAULT_PAYOUT_PERCENT=5
PARTNER_INVITE_CODE=SECRET123

# Database
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=masterbot
POSTGRES_USER=masterbot
POSTGRES_PASSWORD=masterbot

# Bot
BOT_TOKEN=your_bot_token_here

# AI (Gemini 2.0 + локальный фоллбек)
# Предпочтительно используйте GOOGLE_API_KEY. API_GEMINI_FREE оставлен для обратной совместимости.
# Если ключ не задан, будет использована локальная HF-модель (CPU).
GOOGLE_API_KEY=your_gemini_api_key_here
# API_GEMINI_FREE=your_gemini_api_key_here

# Модель Gemini по умолчанию
GEMINI_MODEL_NAME=gemini-2.0-flash

# Локальная модель (фоллбек): русскоязычная T5 multitask
AI_MODEL_NAME=cointegrated/rut5-base-multitask

# Короткие ответы по умолчанию
AI_MAX_NEW_TOKENS=60